<h1>Employee Tracker</h1>

<div class="row">
  <div class="col-md-6">
    <h4>Add new division</h4>
    <form action="/division" method="post">
      <label for="name">Division Name:</label>
      <input id="name" name="name" type="text">
      <button type="submit">Add division</button>
    </form>

    <h3>Division employees</h3>
    <form action="/division_list" method="post">
      <label for="division_id">Division Name:</label>
      <select id ="division_id" name="division_id" type="text">
        <% @divisions.each() do |division| %>
          <option value="<%= division.id() %>"> <%= division.name() %> </option>
        <% end %>
      </select>
      <button type="submit">List division employees</button>
    </form>
  </div>


  <div class="col-md-6">
    <p>Add an employee</p>
    <form action="/employee" method="post">
      <label for="name">Employee Name:</label>
      <input id="name" name="name" type="text">

      <label for="division_id">Select division</label>
      <select id="division_id" name="division_id" type="text">
        <% @divisions.each() do |division| %>
          <option value="<%= division.id() %>"> <%= division.name() %> </option>
        <% end %>
      </select>
      <button type="submit">Add employee</button>
    </form>
    <p>Employees:</p>
    <ul>
      <% @employees.each() do |employee| %>
        <li><%= employee.name() %></li>
        <% end %>
    </ul>
  </div>
</div>
